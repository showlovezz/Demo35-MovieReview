<% if user_signed_in? %>
  <%= form_for [@movie, @review] do |f| %>
    <div class="form-group">
      <div id="star-rating"></div>
    </div>
    <div class="form-group">
      <%= f.text_area :comment, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-primary btn-sm" %>
      <%= f.button "Cancel", type: :reset, class: "btn btn-secondary btn-sm" %>
    </div>
  <% end %>
<% else %>
  <%= link_to "Write Review", new_user_session_path, class: "btn btn-warning mt-2" %>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>