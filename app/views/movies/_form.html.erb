<%= form_for @movie do |f| %>

  <%= f.label :title, "Titile" %>
  <%= f.text_field :title %>

  <%= f.label :description, "Description" %>
  <%= f.text_area :description %>

  <%= f.label :movie_length, "Movie_length" %>
  <%= f.text_field :movie_length %>

  <%= f.label :director, "Director" %>
  <%= f.text_field :director %>

  <%= f.label :rating, "Rating" %>
  <%= f.text_field :rating %>

  <%= f.label :image, "Image" %>
  <%= f.file_field :image %>

  <%= f.submit %>

<% end %>
